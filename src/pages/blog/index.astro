---
import Layout from "../../layouts/PageLayout.astro";
import Header from "../../components/Blog/IndexPage/Header.astro";
import Posts from "../../components/Blog/IndexPage/Posts.astro";

import { blogPageQuery } from "../../queries/api";
const data = await blogPageQuery();
const seo = data.page.seo;
const header = data.page.blogHeader;
const posts = data.posts.nodes;
---

<Layout seo={seo}>
  <Header header={header} />
  <Posts posts={posts} />
</Layout>
