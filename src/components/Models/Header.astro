---
const { header } = Astro.props;
---

<header>
  <div
    style={`background-image:  linear-gradient(
    90deg,
    rgba(5, 5, 5, 0.2) 0%,
    rgba(0, 0, 0, 0.2) 100%
  ), url('${header.image.sourceUrl}')`}
    class="bg-cover bg-center py-[80px] sm:py-[120px]"
  >
    <div class="mx-auto flex flex-col items-center p-5 text-center">
      <h1
        class="text-shadow-lg font-heading text-4xl font-bold leading-relaxed text-white drop-shadow-md sm:text-5xl sm:leading-relaxed"
      >
        {header.heading}
      </h1>
      <h2
        class="text-shadow-lg text-xl leading-relaxed text-white drop-shadow-md sm:text-2xl sm:leading-relaxed"
      >
        {header.subheading}
      </h2>
    </div>
  </div>
</header>
