---
import Button from '../Buttons/Button.astro';
import { Image } from '@astrojs/image/components';
const { mortgageProvider } = Astro.props;
---

<section>
  <div class="mx-auto max-w-[700px] pt-10 pb-32">
    <div class="flex flex-col items-center gap-10">
      <a href={mortgageProvider.buttonLink} target="_blank" rel="noreferrer">
        <Image
          src={mortgageProvider.image.sourceUrl}
          alt={mortgageProvider.image.altText}
          width={700}
          aspectRatio={16 / 5}
          format="webp"
          fit="contain"
          background="transparent"
          class="mx-auto"
        />
      </a>
      <div class="max-w-[300px]">
        <Button
          href={mortgageProvider.buttonLink}
          text={mortgageProvider.buttonText}
          large
          blank
        />
      </div>
    </div>
  </div>
</section>
