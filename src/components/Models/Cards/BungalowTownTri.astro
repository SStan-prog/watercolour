---
const { bungalowTownTri } = Astro.props;
import Card from './Card.astro';
---

<section class="bg-grey-100">
  <div class="mx-auto max-w-[1200px] px-5 py-20">
    <h2 class="mb-20 text-center font-heading text-3xl font-bold sm:text-4xl">
      Bungalow Town Tri
    </h2>
    <div
      class="grid-col-1 mx-auto grid max-w-[1000px] items-center gap-6 sm:grid-cols-2"
    >
      {
        bungalowTownTri.models.edges.map((model: any, i: number) => {
          return (
            <a href={`/models/${model.node.slug}`}>
              <Card model={model} wide />
            </a>
          );
        })
      }
    </div>
  </div>
</section>
