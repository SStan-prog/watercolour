---
import { Image } from '@astrojs/image/components';
const { buyersJourney } = Astro.props;
---

<div class="section bg-grey-100">
  <div class="mx-auto flex flex-col items-center">
    <div class="w-full bg-green">
      <h2
        class="p-8 text-center font-heading text-2xl font-bold text-white sm:text-3xl"
      >
        {buyersJourney.heading}
      </h2>
    </div>
    <div
      class="flex w-full max-w-[1100px] flex-wrap justify-center gap-20 px-5 pt-10 pb-20"
    >
      {
        buyersJourney.steps.map((s: any, i: number) => {
          return (
            <div class="relative flex w-[300px] flex-col items-center">
              <Image
                src={s.icon.sourceUrl}
                alt={s.icon.altText}
                width={200}
                aspectRatio={1}
                format="webp"
                fit="contain"
                background="transparent"
                class="mx-auto mt-14"
              />

              <div class="bg-blueLight absolute top-0 left-0  h-[55px] w-[55px] rounded-full">
                <span class=" text-blue-dark font-heading absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 text-4xl font-bold ">
                  {i + 1}
                </span>
              </div>
              <div class="mt-10 w-full">
                <h3 class="bold font-heading mb-5 text-2xl font-bold">
                  {s.heading}
                </h3>
                <div
                  class=" [&>ul]:ml-4 [&>ul]:list-disc [&>ul>li]:my-2 [&>ul>li]:text-lg"
                  set:html={s.body}
                />
              </div>
            </div>
          );
        })
      }
    </div>
  </div>
</div>
