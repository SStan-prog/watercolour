---
import Dropdown from './Dropdown/Dropdown';
const { main } = Astro.props;

interface questions {
  question: string;
  answer: string;
}
---

<section>
  <div class="max-w-6xl mx-auto py-20 px-5">
    <div class="flex flex-col items-center">
      <h2 class="font-heading text-3xl font-bold mb-5 text-black-100">
        {main.heading}
      </h2>
      <div
        class="text-black-100 [&>*]:text-lg [&>*>a]:text-red"
        set:html={main.body}
      />
      <div class="flex flex-col gap-6 py-10">
        {
          main.questions.map((question: questions) => {
            return (
              <Dropdown
                client:load
                question={question.question}
                answer={question.answer}
              />
            );
          })
        }
      </div>
    </div>
  </div>
</section>
