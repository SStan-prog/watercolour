---
const { header } = Astro.props;
---

<header>
  <div
    class="flex flex-col mx-auto py-20 px-5 gap-10 max-w-[800px] text-center"
  >
    <h1
      class="font-heading text-black-100 font-bold text-4xl sm:text-5xl w-full"
    >
      {header.heading}
    </h1>
    <p class="text-2xl leading-normal">{header.body}</p>
  </div>
</header>
