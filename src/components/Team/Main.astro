---
const { main } = Astro.props;
console.log(main);

interface teamMember {
  name: string;
  position: string;
  email: string;
  phoneNumber: string;
}
---

<section>
  <div class="flex flex-wrap gap-10 py-20 px-5 justify-center w-full">
    {
      main.teamMember.map((member: teamMember) => {
        return (
          <div class="flex flex-col shadow-3xl p-3 rounded-lg  max-w-[300px] w-full">
            <h2 class="text-2xl mb-2">{member.name}</h2>
            <p class="mb-1">{member.position}</p>
            <a class="font-bold text-red" href={`mailto:${member?.email}`}>
              {member?.email}
            </a>

            {member.phoneNumber && (
              <a
                class="font-bold text-red "
                href={`tel:${member?.phoneNumber.replace(/-/g, '')}`}
              >
                {member?.phoneNumber}
              </a>
            )}
          </div>
        );
      })
    }
  </div>
</section>
