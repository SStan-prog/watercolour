---
import Form from './Form.svelte';
const { cta } = Astro.props;
console.log(cta);
---

<section
  style={`background-image:  linear-gradient(
    90deg,
    rgba(0, 0, 0, 0.3) 0%,
    rgba(0, 0, 0, 0.3) 100%
  ), url('${cta.image.sourceUrl}')`}
  class="bg-cover bg-center py-20"
>
  <div class="mx-auto max-w-[1000px] px-5">
    <h2
      class="mb-5 text-center font-heading text-2xl font-bold text-white sm:text-4xl"
    >
      {cta.heading}
    </h2>
    <div
      class="mb-20 text-center text-lg leading-relaxed text-white sm:text-2xl"
      set:html={cta.body}
    />
    <Form client:load />
  </div>
</section>
