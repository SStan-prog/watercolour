---
import Slider from './Slider.svelte';
const { videos } = Astro.props;
---

<section>
  <div class="flex flex-col items-center">
    <div class="w-full bg-green">
      <h2 class="p-8 text-center text-2xl text-white sm:text-3xl">
        {videos.heading}
      </h2>
    </div>
    <div
      class="mx-auto flex max-w-[95vw] flex-col gap-10 px-5 py-20 sm:max-w-[90vw] lg:max-w-[1000px]"
    >
      <Slider videos={videos.videoLinks} client:idle />
    </div>
  </div>
</section>
