---
const { main } = Astro.props;
---

<section>
  <div class="max-w-6xl mx-auto py-20 px-5">
    <div class="flex flex-col items-center mb-16">
      <h2 class="font-heading text-3xl font-bold mb-5 text-center">
        {main.heading}
      </h2>
      <div class="content-block" set:html={main.body} />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-16 mb-20">
      <div set:html={main.listLeft} class="content-block" />
      <div set:html={main.listRight} class="content-block" />
    </div>
  </div>
</section>
