---
import { Picture } from '@astrojs/image/components';
import Button from '../Buttons/Button.astro';
const { header } = Astro.props;
---

<header>
  <div
    style={`background-image:  linear-gradient(
    90deg,
    rgba(0, 0, 0, .2) 0%,
    rgba(0, 0, 0, .2) 100%
  ), url('${header.image.sourceUrl}')`}
    class="relative bg-cover bg-center py-10 md:py-32"
  >
    <div class="flex flex-col justify-center px-5">
      <div
        class="font-heading text-3xl font-bold text-white sm:text-5xl [&>h1]:mb-10 [&>h1]:leading-normal [&>h2]:text-xl sm:[&>h2]:text-3xl"
        set:html={header.heading}
      />
      <div class="mx-auto my-10 flex flex-col gap-6 sm:flex-row sm:gap-10">
        {
          header.buttons.map((b: any) => {
            return <Button text={b.buttonText} href={b.buttonLink} large />;
          })
        }
      </div>
    </div>
  </div>
</header>
