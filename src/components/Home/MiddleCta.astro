---
import Button from '../Buttons/Button.astro';
import { Image } from '@astrojs/image/components';
const { middleCta } = Astro.props;

const cottage = middleCta.cottageStyleHome;
const story = middleCta.storyOfWatercolour;
---

<section>
  <div
    class="py-20 px-5 sm:px-20 mx-auto max-w-[1200px] flex flex-col items-center gap-10"
  >
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-20">
      <div class="">
        <Image
          src={cottage.image.sourceUrl}
          alt={cottage.image.altText}
          width={500}
          aspectRatio={4 / 3}
          format="webp"
          fit="cover"
          position="center"
          background="transparent"
          class="w-full h-auto"
        />
      </div>
      <div class="">
        <h2 class="font-heading font-bold text-3xl sm:text-5xl mb-3">
          {cottage.heading}
        </h2>
        <div class="text-2xl mb-5 text-black-200" set:html={cottage.body} />

        <div class="flex flex-col items-center w-full gap-5">
          {
            cottage.buttons.map((button: any) => {
              return (
                <Button
                  large
                  text={button.buttonText}
                  href={button.buttonLink}
                />
              );
            })
          }
        </div>
      </div>
    </div>
  </div>

  <div
    class="py-20 px-5 sm:px-20 mx-auto max-w-[1200px] flex flex-col items-center gap-20"
  >
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-20">
      <div class="">
        <Image
          src={story.image.sourceUrl}
          alt={story.image.altText}
          width={500}
          aspectRatio={4 / 3}
          format="webp"
          fit="cover"
          position="center"
          background="transparent"
          class="w-full h-auto"
        />
      </div>
      <div class="">
        <div
          class="text-xl mb-5 text-black-200 [&>p]:mb-2"
          set:html={story.body}
        />

        <div class="flex flex-col items-center w-full gap-5">
          <Button large text={story.buttonText} href={story.buttonLink} />
        </div>
      </div>
    </div>
  </div>
</section>
