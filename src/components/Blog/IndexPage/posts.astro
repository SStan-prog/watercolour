---
const { posts } = Astro.props;
---

<section>
  <div
    class="max-w-7xl mx-auto grid grid-cols-3 sm:grid-cols-6 lg:grid-cols-9 gap-10 xl:gap-20 py-20 px-5 sm:px-10 justify-items-center"
  >
    {
      posts.map((post: any) => {
        const date = new Date(post.date);
        const monthNames = [
          "Jan",
          "Feb",
          "March",
          "April",
          "May",
          "June",
          "July",
          "Aug",
          "Sep",
          "Oct",
          "Nov",
          "Dec",
        ];

        return (
          <a
            href={`/blog${post.uri}`}
            class="bg-grey-100 w-11/12 col-span-3 cursor-pointer"
          >
            <article>
              <div>
                <img
                  src={post.featuredImage.node.mediaItemUrl}
                  alt={post.featuredImage.node.altText}
                  class=" aspect-video"
                />
              </div>
              <div class="p-4">
                <h2 class="font-bold mb-2">{post.title}</h2>

                <div class=" text-grey-300 mb-1">
                  by {post.author.node.name} | {monthNames[date.getMonth()]}{" "}
                  {date.getDate()}, {date.getFullYear()}
                </div>
                <p set:html={post.excerpt} />
              </div>
            </article>
          </a>
        );
      })
    }
  </div>
</section>
