---
import Button from '../Buttons/Button.astro';
import { Image } from '@astrojs/image/components';
const { cta } = Astro.props;
---

<section class="bg-grey-100">
  <div
    class="grid-col-1 mx-auto grid max-w-[600px] content-center items-center gap-20 py-20 px-5 lg:max-w-[1400px] lg:grid-cols-2"
  >
    <div class="flex flex-col items-center">
      <h2 class="mb-2 text-center font-heading text-3xl font-bold sm:text-5xl">
        {cta.heading}
      </h2>
      <div class="mb-10 text-center text-lg sm:text-2xl" set:html={cta.body} />
      <div class="block max-w-[300px]">
        <Button href={cta.buttonLink} text={cta.buttonText} large blank />
      </div>
    </div>
    <Image
      src={cta.image.sourceUrl}
      alt={cta.image.altText}
      width={550}
      aspectRatio={4 / 3}
      format="webp"
      fit="cover"
      background="transparent"
      class="mx-auto rounded-md"
    />
  </div>
</section>
