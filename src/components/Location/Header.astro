---
const { header } = Astro.props;
---

<header>
  <div
    style={`background-image:  linear-gradient(
      90deg,
      rgba(5, 5, 5, 0.2) 0%,
      rgba(0, 0, 0, 0.2) 100%
    ), url('${header.image.sourceUrl}')`}
    class="bg-cover bg-center bg-no-repeat"
  >
    <div class="mx-auto flex h-[80vh] max-w-[1400px] items-center px-5">
      <h1
        class="text-shadow-lg font-heading text-5xl font-bold leading-relaxed text-white drop-shadow-md sm:text-6xl sm:leading-relaxed"
      >
        {header.heading}
      </h1>
    </div>
  </div>
</header>
