---
const { href, text, large, blank } = Astro.props;
---

{
  blank ? (
    <a
      target="_blank"
      rel="noreferrer"
      href={href}
      class={`bg-red bold border-red  hover:text-red cursor-pointer  border-2 text-center text-white transition duration-100 ease-linear hover:bg-transparent
  ${
    large
      ? 'rounded-xl px-4 py-2 text-xl sm:px-5 sm:py-3 sm:text-2xl'
      : 'rounded px-2 py-1 text-sm'
  }
  `}
    >
      {text}
    </a>
  ) : (
    <a
      href={href}
      class={`bg-red bold border-red  hover:text-red cursor-pointer  border-2 text-center text-white transition duration-100 ease-linear hover:bg-transparent
  ${
    large
      ? 'rounded-xl px-4 py-2 text-xl sm:px-5 sm:py-3 sm:text-2xl'
      : 'rounded px-2 py-1 text-sm'
  }
  `}
    >
      {text}
    </a>
  )
}
