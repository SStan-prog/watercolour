---
import Header from "../Blog/Single/Header.astro";
import Sidebar from "../Blog/Single/Sidebar.astro";
const { node } = Astro.props;
---

<div
  class="max-w-7xl mx-auto grid grid-col-1 lg:grid-cols-10 py-20 gap-20 px-5"
>
  <div class="col-span-7">
    <Header title={node.title} date={node.date} />

    <article set:html={node.content} class="single" />
  </div>
  <div class="col-span-3">
    <Sidebar date={node.date} />
  </div>
</div>

<style is:global>
  .wp-block-image img {
    width: 100%;
    height: auto;
    margin: 20px 0;
  }

  .alignright {
    float: right;
  }

  .single p {
    margin-bottom: 20px;
    line-height: 1.6;
  }
  .single div {
    margin-bottom: 16px;
  }

  .single a {
    color: var(--color-red);
  }

  .single h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: bold;
    padding-top: 20px;
    padding-bottom: 10px;
    line-height: 1.5em;
  }

  .single h2 {
    font-size: 26px;
  }
</style>
