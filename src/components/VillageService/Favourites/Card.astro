---
import Slider from './Slider.svelte';
const { favourite } = Astro.props;
---

<div
  class="h-full w-full max-w-[500px] flex-col items-center rounded-3xl bg-white p-5 shadow-md"
>
  <div class="activity-card mb-5" set:html={favourite.text} />
  <div class="mt-auto w-full">
    <Slider images={favourite.images} client:idle />
  </div>
</div>
