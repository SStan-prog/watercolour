---
import { Image } from '@astrojs/image/components';
const { custom } = Astro.props;
---

<section class="bg-grey-100">
  <div class="mx-auto flex flex-col items-center py-20 px-5 lg:max-w-[1200px]">
    <h2
      class="mb-10 max-w-[800px] text-center font-heading text-3xl font-bold sm:text-4xl lg:mb-20"
    >
      {custom.heading}
    </h2>

    {
      custom.body ? (
        <div class="grid grid-cols-1 gap-10 md:grid-cols-2 md:gap-20">
          <div class="custom-body" set:html={custom.body} />
          <div class="">
            <img
              src={custom.image.sourceUrl}
              alt={custom.image.altText}
              loading="lazy"
              class="rounded-lg"
            />
          </div>
        </div>
      ) : (
        <img
          src={custom.image.sourceUrl}
          alt={custom.image.altText}
          loading="lazy"
          class="rounded-lg"
        />
      )
    }
  </div>
</section>
